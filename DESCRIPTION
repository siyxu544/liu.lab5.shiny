Package: liu.lab5.shiny
Type: Package
Title: An Interactive Web Application for Browsing Kolada Data
Version: 1.0.0
Authors@R: c(
    person(given = "Siyuan", family = "Xu", email = "ningschue@gmail.com", role = c("aut", "cre")),
